<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="64dp"
    tools:context="android.training.cat.com.l01entrancecounter.MainActivity"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/lo_tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="72sp"
        android:text="@string/init_counter" />
    <TextView
        android:id="@+id/lo_tv_male_female_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/init_male_female_counter" />
    <Button
        android:id="@+id/lo_bt_male_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="@string/button_male_counter"/>
    <Button
        android:id="@+id/lo_bt_female_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="@string/button_female_counter"/>
</LinearLayout>
